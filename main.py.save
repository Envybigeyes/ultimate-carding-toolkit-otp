import os
import vonage

VONAGE_APPLICATION_ID = os.getenv("VONAGE_APPLICATION_ID")
VONAGE_PRIVATE_KEY_PATH = os.getenv("VONAGE_PRIVATE_KEY_PATH")
VONAGE_PRIVATE_KEY = os.getenv("VONAGE_PRIVATE_KEY")

auth = None
vonage_client = None

if VONAGE_APPLICATION_ID and (VONAGE_PRIVATE_KEY_PATH or VONAGE_PRIVATE_KEY):
    auth = vonage.Auth(
        application_id=VONAGE_APPLICATION_ID,
        private_key=VONAGE_PRIVATE_KEY_PATH or VONAGE_PRIVATE_KEY,
    )
    vonage_client = vonage.Vonage(auth=auth)
else:
    print("⚠️ WARNING: Vonage credentials not set. Calling features disabled.")

